}


/* REVIEW */

.review {
   background-image: url(../images/bg-review.svg);
   /* 
      background-size: contain;
      membuat gambar latar belakang tidak terpotong
   */
   background-size: contain;

   /* 
      background-repeat: no-repeat;
      membuat gambar latar belakang tidak diulang (duplikat)
   */
   background-repeat: no-repeat;
   padding-left: 20px;
   padding-right: 20px;
}

.judul-review {
   margin-bottom: 20px;
}

.subjudul-review {
